<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.orange.model.ProductRepository">
   <select id="findAll" resultType="shop.mtcoding.orange.model.Product">
      select * from product order by id desc
   </select>
   
   <select id="findOne" resultType="shop.mtcoding.orange.model.Product">
      select * from product where id = #{id}
   </select>

   <insert id="insert"> <!--useGeneratedKey="id" 키값을 지정 지금은 값을 하나씩 넣기때문에 사용하지 않음-->
      insert into product(name, price, qty, createdAt) values(#{name}, #{price}, #{qty}, now()) <!--세미콜론 붙이지 말것-->
   </insert>

    <update id="update">
          update product
          set name = #{name},
            price = #{price},
               qty = #{qty}
         where id = #{id}
    </update>


   <delete id="delete">
      delete from product where id = #{id}
   </delete>

   



</mapper>